<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@color/white">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pack" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageView_product"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Sugar Maxx"
        android:fontFamily="@font/inter_semibold"
        android:textColor="#000000"
        android:textSize="@dimen/_12ssp" />

    <!-- Product Description -->
    <TextView
        android:id="@+id/product_varity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_product_name"
        android:layout_alignStart="@id/tv_product_name"
        android:text="2 x Sugar Maxx"
        android:textColor="#278B2B"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_varity"
        android:layout_alignStart="@id/product_varity"
        android:text="2 x Sugar Maxx"
        android:textColor="#F20000"
        android:textSize="@dimen/_10ssp" />


    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_size"
        android:layout_alignStart="@id/product_size"
        android:text="50"
        android:textColor="#278B2B"
        android:paddingBottom="@dimen/_10sdp"
        android:textSize="@dimen/_10ssp" />

