<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/drw_radio_button" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toRightOf="@id/imageView4"
        android:fontFamily="@font/inter_semibold"
        android:text="F1 SARDAR489"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:textSize="@dimen/_10ssp" />


    <TextView
        android:id="@+id/product_varity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:textColor="#E31D2A"
        android:textSize="12sp"
        android:paddingEnd="5dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_below="@id/imageView4"
        android:layout_marginLeft="@dimen/_5sdp"
     />

    <TextView
        android:id="@+id/product_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textColor="#E31D2A"
        android:textSize="12sp"
        android:paddingEnd="5dp"
        android:gravity="center"
        android:layout_below="@id/product_varity"
        android:layout_marginLeft="@dimen/_5sdp"
        />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textColor="#E31D2A"
        android:textSize="12sp"
        android:paddingEnd="5dp"
        android:gravity="center"
        android:layout_below="@id/product_size"
        android:layout_marginLeft="@dimen/_5sdp"
        />

    <LinearLayout
        android:id="@+id/ll_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_14sdp"
        android:layout_marginEnd="@dimen/_9sdp"
        android:background="#278B2B"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/btnMinus"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:background="@drawable/border_grey_round_corners"
            android:backgroundTint="#278B2B"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/_21sdp"
            android:layout_height="@dimen/_21sdp"
            android:background="@drawable/border_grey_round_corners"
            android:backgroundTint="#278B2B"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:background="#E7E7E7" />

</RelativeLayout>