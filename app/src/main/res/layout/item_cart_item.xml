            android:backgroundTint="#278B2B"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>

    <!-- Bottom Divider -->
