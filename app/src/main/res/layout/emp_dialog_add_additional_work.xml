<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/_7sdp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_additional_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/icon_metro_arrow_right"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableTint="#000000"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Request Additional Working"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_vehicle_reading"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:fontFamily="@font/inter_medium"
            android:text="From Date"
            android:textColor="#626364"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/tv_from_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:background="@drawable/border_grey_round_corners"
            android:drawableEnd="@drawable/icon_awesome_calendar_alt"
            android:drawablePadding="@dimen/_14sdp"
            android:hint="Select Date"
            android:paddingStart="@dimen/_11sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_vehicle_reading"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:fontFamily="@font/inter_medium"
            android:text="To Date"
            android:textColor="#626364"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/tv_to_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:background="@drawable/border_grey_round_corners"
            android:drawableEnd="@drawable/icon_awesome_calendar_alt"
            android:drawablePadding="@dimen/_14sdp"
            android:hint="Select Date"
            android:paddingStart="@dimen/_11sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp" />

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_85sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:background="@drawable/border_grey_round_corners"
            android:gravity="start"
            android:hint="Reason....."
            android:inputType="text"
            android:paddingStart="@dimen/_11sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/border_grey_round_corners"
            android:backgroundTint="#278B2B"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>