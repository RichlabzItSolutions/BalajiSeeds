        android:text="Holidays List"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />

    <TextView
        android:id="@+id/tv_add_holidays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:drawableStart="@drawable/icon_ionic_ios_add_circle"
        android:drawablePadding="@dimen/_3sdp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Add Holidays"
        android:textColor="#278B2B"
        android:textSize="@dimen/_11ssp" />

    <Spinner
        android:id="@+id/sp_pack_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_below="@id/tv_add_holidays"
        android:background="@drawable/spinner_bg_transparent"
        android:paddingStart="@dimen/_14sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingBottom="@dimen/_14sdp"/>

