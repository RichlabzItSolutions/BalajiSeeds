<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AddProductActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableStart="@drawable/icon_metro_arrow_right"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="#000000"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Add Product"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_submit"
        android:layout_below="@id/textView"
        android:layout_marginTop="@dimen/_24sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Product Code*"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_sku_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:fontFamily="@font/inter_regular"
                android:hint="Product Code"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Product Title*"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:fontFamily="@font/inter_regular"
                android:hint="Product Title"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Product Variety*"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

          <!--  <EditText
                android:id="@+id/et_product_Variety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:fontFamily="@font/inter_regular"
                android:hint="Product Variety"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />-->

            <Spinner
                android:id="@+id/sp_pack_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_below="@id/tv_add_holidays"
                android:background="@drawable/spinner_bg_transparent"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Description*"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:hint="Description"
                android:minHeight="@dimen/_75sdp"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />

            <EditText
                android:id="@+id/et_add_key_factor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:drawableEnd="@drawable/icon_ionic_ios_add_circle_1"
                android:drawablePadding="@dimen/_15sdp"
                android:hint="Add Key Factors"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="MRP*"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="Distributor Price*"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_mrp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey_round_corners"
                    android:fontFamily="@font/inter_regular"
                    android:hint="MRP"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_11sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textSize="@dimen/_10ssp" />

                <EditText
                    android:id="@+id/et_selling_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:layout_weight="1"
                    android:background="@drawable/border_grey_round_corners"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Distributor Price"
                    android:paddingStart="@dimen/_11sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_11sdp"
                    android:paddingBottom="@dimen/_15sdp"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/inter_regular"
                android:text="Packaging Size*"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />

           <!-- <Spinner
                android:id="@+id/sp_pack_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/spinner_bg_transparent"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp" />-->

            <EditText
                android:id="@+id/et_Packaging_Size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:fontFamily="@font/inter_regular"
                android:hint="Packaging Size"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />

            <Spinner
                android:id="@+id/sp_deliver_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/spinner_bg_transparent"
                android:paddingStart="@dimen/_14sdp"
                android:paddingTop="@dimen/_14sdp"
                android:paddingBottom="@dimen/_14sdp"
                android:visibility="gone" />

            <com.balajiseeds.utils.CustomImageViewDashed
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_15sdp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_grey_round_corners"
        android:backgroundTint="#278B2B"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:paddingStart="@dimen/_14sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingEnd="@dimen/_14sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>