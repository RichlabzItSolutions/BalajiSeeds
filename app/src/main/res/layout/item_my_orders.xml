<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_9sdp"
    android:background="@drawable/border_grey_round_corners"
    android:backgroundTint="#ffffff"
    android:paddingBottom="@dimen/_10sdp">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_11sdp"
        android:layout_marginEnd="@dimen/_11sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:src="@drawable/sample1" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_product_img"
        android:layout_toEndOf="@id/iv_product_img"
        android:fontFamily="@font/inter_semibold"
        android:text="Sugar Maxx"
        android:textColor="#000000"
        android:textSize="@dimen/_10ssp" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/iv_product_img"
        android:drawableStart="@drawable/rupee_small"
        android:drawablePadding="@dimen/_2sdp"
        android:fontFamily="@font/inter_semibold"
        android:text="349"
        android:textColor="#000000"
        android:textSize="@dimen/_9ssp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_order_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_order_price"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toEndOf="@id/iv_product_img"
        android:fontFamily="@font/inter_medium"
        android:text="2 x Sugar Maxx"
        android:textColor="#7E7E7E"
        android:textSize="@dimen/_8ssp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_product_img"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_13sdp"
        android:fontFamily="@font/inter_medium"
        android:text="23 Dec, 2023"
        android:textColor="#0E151F"
        android:textSize="@dimen/_8ssp" />

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@id/iv_product_img"
        android:background="#E7E7E7" />

    <TextView
        android:id="@+id/tv_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:fontFamily="@font/inter_medium"
        android:text="Order ID - BHYSI782HJKL"
        android:textColor="#0E151F"
        android:textSize="@dimen/_8ssp" />

    <LinearLayout
        android:id="@+id/ll_delivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_order_delivered"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_3sdp"
            android:importantForAccessibility="no"
            android:src="@drawable/drw_radio_button"
            android:textColor="#0E151F" />

        <TextView
            android:id="@+id/tv_order_delivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Delivered"
            android:textColor="#0E151F"
            android:textSize="@dimen/_8ssp" />
    </LinearLayout>

</RelativeLayout>