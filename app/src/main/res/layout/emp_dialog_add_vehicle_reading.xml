<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/_7sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_vehicle_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:drawableStart="@drawable/icon_metro_arrow_right"
            android:drawablePadding="@dimen/_15sdp"
            android:drawableTint="#000000"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Start Reading"
            android:textColor="#000000"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/txt_meter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_vehicle_reading"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_27sdp"
            android:fontFamily="@font/inter_medium"
            android:text="Start Meter"
            android:textColor="#626364"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/et_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:background="@drawable/border_grey_round_corners"
            android:hint="Enter Start Reading"
            android:inputType="number|numberSigned"
            android:paddingStart="@dimen/_11sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_10ssp" />

        <Spinner
            android:id="@+id/sp_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:background="@drawable/spinner_bg_transparent"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp">

            <com.balajiseeds.utils.CustomImageViewDashed
                android:id="@+id/iv_reading_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_15sdp" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/border_grey_round_corners"
                android:backgroundTint="#ff0000"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/baseline_delete_24"
                android:translationY="@dimen/_5sdp"
                android:visibility="gone"
                app:tint="#ffffff" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/border_grey_round_corners"
            android:backgroundTint="#278B2B"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingStart="@dimen/_14sdp"
            android:paddingTop="@dimen/_14sdp"
            android:paddingEnd="@dimen/_14sdp"
            android:paddingBottom="@dimen/_14sdp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>