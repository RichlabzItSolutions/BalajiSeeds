<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FA"
    tools:context=".employee.ActivityDetailActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableStart="@drawable/icon_metro_arrow_right"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="#000000"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Activity Details"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/textView"
    android:layout_marginStart="@dimen/_13sdp"
    android:layout_marginTop="@dimen/_19sdp"
    android:layout_marginEnd="@dimen/_13sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_grey_round_corners"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/_7sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingBottom="@dimen/_15sdp">

        <LinearLayout
        android:orientation="vertical"
            android:id="@+id/tr_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#70000000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Activity Title"
                    android:textColor="#000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#70000000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Location"
                    android:textColor="#000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#70000000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_reject_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="@dimen/_11ssp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/inter_medium"
                    android:text=":"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter_medium"
                    android:maxLines="3"
                    android:text=""
                    android:textColor="#70000000"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text=""
                    android:textColor="#70000000"
                    android:textSize="@dimen/_10ssp" />
            </TableRow>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp" />

    </LinearLayout>
</ScrollView>

</RelativeLayout>