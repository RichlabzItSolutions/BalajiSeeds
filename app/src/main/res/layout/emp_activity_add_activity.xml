<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".employee.AddActivityActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:drawableStart="@drawable/icon_metro_arrow_right"
        android:drawablePadding="@dimen/_15sdp"
        android:drawableTint="#000000"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Add Activity"
        android:textColor="#000000"
        android:textSize="@dimen/_14ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_submit"
        android:layout_below="@id/textView"
        android:layout_marginTop="@dimen/_24sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:text="Title"
                android:fontFamily="@font/inter_bold"
                android:textColor="#000000"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:hint="Enter Title"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:text="Location"
                android:fontFamily="@font/inter_bold"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:id="@+id/et_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:hint="Enter Location"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:text="Description"
                android:fontFamily="@font/inter_bold"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_12sdp"
                android:textSize="@dimen/_10ssp" />
            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:background="@drawable/border_grey_round_corners"
                android:gravity="start"
                android:fontFamily="@font/inter_regular"
                android:hint="Enter Description"
                android:minHeight="@dimen/_75sdp"
                android:paddingStart="@dimen/_11sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:textSize="@dimen/_10ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_13sdp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_grey_round_corners"
        android:backgroundTint="#278B2B"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:paddingStart="@dimen/_14sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingEnd="@dimen/_14sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_12ssp" />

</RelativeLayout>